<div id="visibility-button" class="mb-6 w-full">
  <div class="mb-1 text-xs text-gray-500">公開設定</div>

  <div class="flex w-full rounded-lg bg-gray-200/80 p-1">
    <%= button_to status_trip_path(trip, trip: { status: 'private' }), disabled: trip.visibility_private?, method: :patch, class: "w-full", data: { turbo: true }, form_class: "flex-1" do %>
      <div class="w-full rounded-md py-1.5 text-sm <%= trip.visibility_private? ? 'font-bold text-blue-500 shadow-sm ring-1 ring-black/5 bg-white cursor-default' : 'font-medium text-gray-500 hover:bg-gray-50 transition active:scale-95'%>">
        自分のみ
      </div>
    <% end %>

    <%= button_to status_trip_path(trip, trip: { status: 'unlisted' }), disabled: trip.visibility_unlisted?,method: :patch, class: "w-full", data: { turbo: true }, form_class: "flex-1" do %>
      <div class="w-full rounded-md py-1.5 text-sm <%= trip.visibility_unlisted? ? 'font-bold text-blue-500 shadow-sm ring-1 ring-black/5 bg-white cursor-default' : 'font-medium text-gray-500 hover:bg-gray-50 transition active:scale-95'%>">
        限定公開
      </div>
    <% end %>

    <%= button_to status_trip_path(trip, trip: { status: 'public' }), disabled: trip.visibility_public?, method: :patch, class: "w-full", data: { turbo: true }, form_class: "flex-1" do %>
      <div class="w-full rounded-md py-1.5 text-sm <%= trip.visibility_public? ? 'font-bold text-blue-500 shadow-sm ring-1 ring-black/5 bg-white cursor-default' : 'font-medium text-gray-500 hover:bg-gray-50 transition active:scale-95'%>">
        全体公開
      </div>
    <% end %>
  </div>
</div>
